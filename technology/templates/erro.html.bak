<!DOCTYPE html>
<html>
<head>
<meta http-equiv="refresh" content="240" charset=UTF-8>
<script>
    function mytime(){
        var a = new Date();
        var b = a.toLocaleTimeString();
        var c = a.toLocaleDateString();
        document.getElementById("time1").innerHTML = c+"&nbsp"+b;
        }
    setInterval(function() {mytime()},10);
</script>
<script>
    function num(){
        var Num="",
        for (var i=0;i<6;i++)
        {
          Num+=Math.floor(Math.random()*10);
        }
        document.getElementById("bh").innerText=Num;
        }
    setInterval(function() {num()});
</script>
